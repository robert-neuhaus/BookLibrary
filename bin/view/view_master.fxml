<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="File" mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="menuQuit" mnemonicParsing="false" onAction="#handleMenuAction" text="Quit" />
            </items>
          </Menu>
            <Menu fx:id="Books" mnemonicParsing="false" text="Books">
              <items>
              <MenuItem fx:id="menuBookList" mnemonicParsing="false" onAction="#handleMenuAction" text="Book List" />
                <MenuItem fx:id="menuAddBook" mnemonicParsing="false" onAction="#handleMenuAction" text="Add Book" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
